<h1>Sign Up</h1>

<%= form_for @user do |f| %>


<div class="form-group">
	<label>Firstname</label>
	<%= f.text_field :firstname, {:class => 'form-control input-md'} %></div>

	<div class="form-group">
	<label>Lastname</label>
	<%= f.text_field :lastname, {:class => 'form-control input-md'} %></div>

<div class="form-group">
	<label>Email</label>
	<%= f.text_field :email, {:class => 'form-control input-md'} %>
</div>

<div class="form-group">
	<label>Password</label>
	<%= f.password_field :password, {:class => 'form-control input-md'} %>
</div>

<div class="actions">
		<%= f.submit "Signup", class: 'btn btn-primary btn-md' %>
	</div>
	<!--<p><%= link_to'Back', @users_index_path %></p>-->

	<% if @user.errors.any? %>
<div class="error_messages">
<h2>Form is invalid</h2>
<ul>
	<%= @user.errors.full_messages.each do |message| %>
	<li><%= message%></li>
	<% end %>
	</ul>
	</div>
	<% end %>

<% end %>
